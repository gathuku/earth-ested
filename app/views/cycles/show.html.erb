<div class="bg-white shadow overflow-hidden sm:rounded-lg sm:m-6 lg:m-12">
  <div class="px-4 py-5 sm:px-6">
   <div class="flex justify-between">
    <div>
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      Cycles Information
    </h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">
      Cycles details.
    </p>
    </div>
    <div>
    <%= link_to cycles_path, class: 'px-3 py-2 bg-gray-700 rounded-md text-white' do %>
      All Cycles
    <% end %>
    </div>

   </div>

  </div>
  <div class="border-t border-gray-200">
  <dl>
    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
      <dt class="text-sm font-medium text-gray-500">
        Name
      </dt>
      <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
        <%= @cycle.name %>
      </dd>
      <dt class="text-sm font-medium text-gray-500">
        Components
      </dt>
      <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
        <%= @cycle.components %>
      </dd>
    </div
  </dl>

  <div class="m-3">
  <%= link_to edit_cycle_path(@cycle), class: 'px-3 py-2 bg-gray-700 rounded-md text-white' do %>
    Edit
  <% end %>
  </div>
  
  </div>
</div>
